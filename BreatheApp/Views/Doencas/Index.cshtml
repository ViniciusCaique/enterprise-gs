@using (Html.BeginForm("Index", "Doencas", FormMethod.Get))
{
    @Html.TextBox("SearchBy")
    <input type="submit" value="Search" class="btn btn-dark" />
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recomendacoes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recomendacoes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DoencaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DoencaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DoencaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

